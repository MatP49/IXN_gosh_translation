<script language="JavaScript" type="text/javascript">
var time =3;
var link="https://babeluclx.herokuapp.com/records/result";

function linkto(){
 if (time <=0){
  window.location = link;
 }else{
  time--;
  document.getElementById("placeholder").innerHTML = "redirection in "+time+" seconds."
  setTimeout("linkto()", 1000)
 }
}
</script>

<div id="placeholder">
<script>
 linkto();
</script>


